{
    "name": "Take Flight",
    "description": "Launch yourself up in the air and gain the ability to fly temporarily.\nã€€",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": [
                {
                    "color": "dark_purple",
                    "text": "Active ability. Activate with "
                },
                {
                    "color": "gold",
                    "keybind": "key.origins.primary_active"
                },
                {
                    "color": "dark_purple",
                    "text": "."
                }
            ],
            "sprite": "origins:textures/gui/badge/active.png"
        },
        {
            "type": "origins:tooltip",
            "text": [
                "Duration: 15 seconds\n",
                "Cooldown: 15 seconds"
            ],
            "sprite": "origins:textures/gui/badge/info.png"
        }
    ],
    "type": "origins:multiple",
    "duration": {
        "type": "origins:resource",
        "min": 0,
        "max": 300,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "tepids_origins:textures/icons/bars/overworld/1.png",
            "bar_index": 3,
            "condition": {
                "inverted": true,
                "type": "origins:resource",
                "resource": "tepids_origins:origins/sculkcritter/takeflight_duration",
                "comparison": "==",
                "compare_to": 0
            }
        }
    },
    "cooldown": {
        "type": "origins:cooldown",
        "cooldown": 300,
        "hud_render": {
            "should_render": true,
            "sprite_location": "tepids_origins:textures/icons/bars/overworld/1.png",
            "bar_index": 3
        }
    },
    "activate": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "tepids_origins:origins/sculkcritter/takeflight_duration",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "tepids_origins:origins/sculkcritter/takeflight_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:play_sound",
                    "sound": "tepids_origins:sculkcritter.origin.take_flight",
                    "volume": 0.6,
                    "pitch": 1
                },
                {
                    "type": "origins:set_resource",
                    "resource": "tepids_origins:origins/sculkcritter/takeflight_duration",
                    "value": 300
                },
                {
                    "type": "origins:add_velocity",
                    "y": 2,
                    "space": "world",
                    "client": true,
                    "server": true
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "inverted": true,
                                "type": "origins:sneaking"
                            },
                            {
                                "type": "origins:power",
                                "power": "tepids_origins:skills/sculkcritter/u1"
                            }
                        ]
                    },
                    "if_action": {
                        "type": "origins:set_resource",
                        "resource": "tepids_origins:skills/sculkcritter/u1_boolean",
                        "value": 1
                    }
                }
            ]
        },
        "cooldown": 10,
        "key": {
            "key": "key.origins.primary_active"
        }
    },
    "flight": {
        "condition": {
            "inverted": true,
            "type": "origins:resource",
            "resource": "tepids_origins:origins/sculkcritter/takeflight_duration",
            "comparison": "==",
            "compare_to": 0
        },
        "type": "origins:creative_flight"
    },
    "aot": {
        "condition": {
            "inverted": true,
            "type": "origins:resource",
            "resource": "tepids_origins:origins/sculkcritter/takeflight_duration",
            "comparison": "==",
            "compare_to": 0
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:modify_resource",
            "resource": "tepids_origins:origins/sculkcritter/takeflight_duration",
            "modifier": {
                "operation": "addition",
                "value": -1
            }
        },
        "falling_action": {
            "type": "origins:trigger_cooldown",
            "power": "tepids_origins:origins/sculkcritter/takeflight_cooldown"
        }
    },
    "deactivate": {
        "condition": {
            "inverted": true,
            "type": "origins:resource",
            "resource": "tepids_origins:origins/sculkcritter/takeflight_duration",
            "comparison": "==",
            "compare_to": 0
        },
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:set_resource",
                    "resource": "tepids_origins:origins/sculkcritter/takeflight_duration",
                    "value": 0
                },
                {
                    "type": "origins:trigger_cooldown",
                    "power": "tepids_origins:origins/sculkcritter/takeflight_cooldown"
                }
            ]
        },
        "cooldown": 10,
        "key": {
            "key": "key.origins.primary_active"
        }
    }
}